<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Course Master</h1>
            </div>
            <div class="card-content">
                <div class="card-body card-dashboard">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">
                                <table class="table zero-configuration dataTable" id="Course_Table" role="grid" aria-describedby="DataTables_Table_0_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 70px;">#</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Training</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" >Course English Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" >Course Sinhala Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" >Course Tramil Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width:30%;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.CourseList != null && ViewBag.CourseList.Count > 0)
                                        {
                                            int i = 1;
                                            @foreach (var item in ViewBag.CourseList)
                                            {
                                                <tr role="row" class="odd">
                                                    <td>@i</td>
                                                    <td>@item.TrainingCourseTraining.TrainingEname</td>
                                                    <td>@item.TrainingCourseEname</td>
                                                    <td>@item.TrainingCourseSname</td>
                                                    <td>@item.TrainingCourseTname</td>
                                                    <td>
                                                        <div class="row">
                                                            <div class="col-md-2">
                                                                <a class="btn btn-outline-light btn-sm"
                                                                   data-toggle="tooltip"
                                                                   data-placement="top"
                                                                   title="Module Resources"
                                                                   href="@Url.Action("Index", "ModuleResouces", new { courseId = item.TrainingCourseId })">
                                                                    <i class="fa-solid fa-paperclip"></i>
                                                                </a>
                                                            </div>
                                                            <div class="col-md-2">
                                                                <a class="btn btn-outline-info btn-sm"
                                                                   data-toggle="tooltip"
                                                                   data-placement="top"
                                                                   title="Modules"
                                                                   href="@Url.Action("Index", "Module", new { trainingId = item.TrainingCourseTrainingId })">
                                                                    <i class="fa-regular fa-file"></i>
                                                                </a>
                                                           </div>
                                                            <div class="col-md-2">
                                                                <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="tooltip" data-placement="top" title="View" onclick="CDetails(@item.TrainingCourseId)"><i class="fa-regular fa-eye"></i></button>
                                                            </div>

                                                            <div class="col-md-2">
                                                                <button type="button" class="btn btn-outline-warning btn-sm" data-toggle="tooltip" data-placement="top" title="Edit" onclick="CEdit(@item.TrainingCourseId)"><i class="fa-regular fa-pen-to-square"></i></button>
                                                            </div>
                                                            <div class="col-md-2">
                                                                <button type="button" class="btn btn-outline-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Delete" onclick="CDelete(@item.TrainingCourseId)"><i class="fa-sharp fa-delete-left"></i></button>
                                                            </div>
                                                        </div>

                                                    </td>

                                                </tr>
                                                i++;
                                            }
                                        }
                                        else
                                        {
                                            <tr role="row" class="odd">
                                                <td colspan="6" class="text-center">No Trainings found.</td>
                                            </tr>
                                        }

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th rowspan="1" colspan="1">#</th>
                                            <th rowspan="1" colspan="1">Training</th>
                                            <th rowspan="1" colspan="1">Course English Name</th>
                                            <th rowspan="1" colspan="1">Course Sinhala Name</th>
                                            <th rowspan="1" colspan="1">Course Tamil Name</th>
                                            <th rowspan="1" colspan="1">Action</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="editCourseModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditCourseModalTittle">Edit Course</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseModals('editCourseModal')">
                    <i class="bx bx-x"></i>
                </button>
            </div>
            <div class="modal-body" id="editCourseContent">
            </div>
        </div>
    </div>
</div>
<div id="detailCourseModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailCourseModalTittle">Course Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseModals('detailCourseModal')">
                    <i class="bx bx-x"></i>
                </button>
            </div>
            <div class="modal-body" id="detailCourseContent">
            </div>
        </div>
    </div>
</div>
