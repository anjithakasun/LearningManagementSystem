<script>        
    function CloseModals(modalId) {
        $('#' + modalId).modal('hide');
    }
    $('#Course_Table').DataTable({
        "paging": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "pageLength": 10,
        "lengthMenu": [10, 25, 50, 100],
        scrollX: true,
        autoWidth: true,
        columnDefs: [    
            { width: "40px", targets: 0 },     // #    
            { width: "200px", targets: 1 },    // Training Course    
            { width: "180px", targets: 2 },    // Schedule Name    
            { width: "180px", targets: 3 },    // Start Date    
            { width: "180px", targets: 4 },    // End Date    
            { width: "300px", targets: 5 }     // Action buttons    
        ]
    });

    $(document).ready(function() {
        var ToastMessage = '@(TempData.ContainsKey("ToastMessage") ? TempData["ToastMessage"] as string : "")';
        if (ToastMessage) {
            var toastEl = document.getElementById('toastId');
            if (toastEl) {
                var toastTitle = toastEl.querySelector('.toast-title');
                var toastMsg = toastEl.querySelector('.toast-message');
                var toast = toastEl.querySelector('.toast');
                if(ToastMessage == 'SubmittedCourseSuccessfully!'){
                    if (toastMsg) {
                        toastMsg.textContent = "Successfully Saved Course";
                        toastTitle.textContent = "Success";
                        toastEl.classList.remove("toast-success", "toast-error", "toast-warning", "toast-info");
                        // toast.classList.add("toast-success");
                        // Add the type class
                        toastEl.classList.add("toast-success");
                        var toast = new bootstrap.Toast(toastEl.querySelector('.toast'));
                        var options = { delay: 3000 }; // 3 seconds
                        var toast = new bootstrap.Toast(toastEl, options);
                        toast.show();
                    } else {
                        console.error("Toast body element not found.");
                    }
                }
                else if(ToastMessage == 'UpdatedCourseSuccessfully!'){
                    if (toastMsg) {
                        toastMsg.textContent = "Successfully Updated Course";
                        toastTitle.textContent = "Success";
                        toastEl.classList.remove("toast-success", "toast-error", "toast-warning", "toast-info");
                        // Add the type class
                        toastEl.classList.add("toast-success");
                        var toast = new bootstrap.Toast(toastEl.querySelector('.toast'));
                        var options = { delay: 3000 }; // 3 seconds
                        var toast = new bootstrap.Toast(toastEl, options);
                        toast.show();
                    } else {
                        console.error("Toast body element not found.");
                    }
                }
                else if(ToastMessage == 'DeletedCourseSuccessfully!'){
                    if (toastMsg) {
                        toastMsg.textContent = "Successfully Deleted Course";
                        toastTitle.textContent = "Success";
                        toastEl.classList.remove("toast-success", "toast-error", "toast-warning", "toast-info");
                        // Add the type class
                        toastEl.classList.add("toast-error");
                        var toast = new bootstrap.Toast(toastEl.querySelector('.toast'));
                        var options = { delay: 3000 }; // 3 seconds
                        var toast = new bootstrap.Toast(toastEl, options);
                        toast.show();
                    } else {
                        console.error("Toast body element not found.");
                    }
                }

            } else {
                console.error("Toast container element not found.");
            }
        }
    });
    function CDetails(Id) {
        $.ajax({
            url: '@Url.Action("TairningDetails", "Course")',
            type: "GET",
            data: { id: Id },
            dataType: 'html',
            success: function (result) {
                $("#detailCourseModal .modal-body").html(result);
                $("#detailCourseModal").modal('show');
            },
            error: function (xhr, status, error) {
                console.error("Failed to load modal content:", error);
                alert("Error");
                // Optionally show an error message in the modal
                $("#detailCourseModal .modal-body").html("<p class='text-danger'>Error loading details.</p>");
                $("#detailCourseModal").modal('show');
            }
        });
    }
    function CEdit(id) {
        $.ajax({
            url: '/Course/Edit',
            type: 'GET',
            data: { id: id },
            dataType: 'html',
            success: function (html) {
                $('#editCourseContent').html(html);
                $('#editCourseModal').modal('show');
                //bindEditFormSubmit(); // Bind form submit after loading content
            },
            error: function () {
                alert('Could not load complaint data.');
            }
        });
    }
    function CDelete(Id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want to delete this Course?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("Delete", "Course")',
                    type: 'POST',
                    data: { id: Id },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Deleted!',
                                text: 'Method has been deleted successfully.',
                                confirmButtonColor: '#3085d6'
                            }).then(() => {
                                location.reload(); // Refresh table after delete
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message || 'Unable to delete Method.'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred while deleting attachment.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            }
        });
    }
</script>
