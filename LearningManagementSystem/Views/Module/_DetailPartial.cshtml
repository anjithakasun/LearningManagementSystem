@model LearningManagementSystem.Data.LMSModels.TrainingCourseModule


<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4">
                <strong>Training | Course</strong>
            </div>
            <div class="col-md-6">
                :  @Html.DisplayFor(m => m.TrainingCourseModuleTrainingCourse.TrainingCourseTraining.TrainingEname) | @Html.DisplayFor(m => m.TrainingCourseModuleTrainingCourse.TrainingCourseEname)
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <strong>Module English Name</strong>
            </div>
            <div class="col-md-3">
                :  @Html.DisplayFor(m => m.TrainingCourseModuleEname)
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <strong>Module Sinhala Name</strong>
            </div>
            <div class="col-md-3">
                :  @Html.DisplayFor(m => m.TrainingCourseModuleSname)
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <strong>Module Tamil Name</strong>
            </div>
            <div class="col-md-3">
                :  @Html.DisplayFor(m => m.TrainingCourseModuleTname)
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <strong>Sequence</strong>
            </div>
            <div class="col-md-3">
                :  @Html.DisplayFor(m => m.TrainingCourseModuleSequance)
            </div>
        </div>
        @if (Model.TrainingCourseModuleIsQuiz == true)
        {
            <div class="row">
                <div class="col-md-4">
                    <strong>Quizz Type</strong>
                </div>
                <div class="col-md-3">
                    :  @Html.DisplayFor(m => m.TrainingCourseModuleQuizType.QuizTypeType)
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-4">
                <strong>Course Description</strong>
            </div>
            <div class="col-md-6">
                :  @Html.DisplayFor(m => m.TrainingCourseModuleDescription)
            </div>
        </div>

    </div>
</div>
<br />


<div class="modal-footer">
    <button type="button" class="btn grey btn-light-secondary" data-bs-dismiss="modal">Close</button>
</div>