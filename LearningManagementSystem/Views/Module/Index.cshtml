<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">@ViewBag.TrainingName Training</h1>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Course Module</h1>
            </div>
            <div class="card-content">
                @Html.Partial("_CreatePartial")
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Course Module Master</h1>
            </div>
            <div class="card-content">
                <div class="card-body card-dashboard">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">
                                <table class="table zero-configuration dataTable" id="Module_Table" role="grid" aria-describedby="DataTables_Table_0_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">#</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width:130px">Training Course</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width:90px">English Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width:130px">Sinhala Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width:130px">Tamil Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width:50px">Sequence</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width:30%;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.ModuleList != null && ViewBag.ModuleList.Count > 0)
                                        {
                                            int i = 1;
                                            @foreach (var item in ViewBag.ModuleList)
                                            {
                                                <tr role="row" class="odd">
                                                    <td>@i</td>
                                                    <td>@item.TrainingCourseModuleTrainingCourse.TrainingCourseTraining.TrainingEname | @item.TrainingCourseModuleTrainingCourse.TrainingCourseEname</td>
                                                    <td>@item.TrainingCourseModuleEname</td>
                                                    <td>@item.TrainingCourseModuleSname</td>
                                                    <td>@item.TrainingCourseModuleTname</td>
                                                    <td>@item.TrainingCourseModuleSequance</td>
                                                    <td>
                                                        <div class="row">
                                                            <div class="col-md-2">
                                                                <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="tooltip" data-placement="top" title="View" onclick="MDetails(@item.TrainingCourseModuleId)"><i class="fa-regular fa-eye"></i></button>
                                                            </div>

                                                            <div class="col-md-2" style="margin-left:30px;margin-right:20px">
                                                                <button type="button" class="btn btn-outline-warning btn-sm" data-toggle="tooltip" data-placement="top" title="Edit" onclick="MEdit(@item.TrainingCourseModuleId)"><i class="fa-regular fa-pen-to-square"></i></button>
                                                            </div>
                                                            <div class="col-md-2" style="margin-left:10px;margin-right:20px">
                                                                <button type="button" class="btn btn-outline-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Delete" onclick="MDelete(@item.TrainingCourseModuleId)"><i class="fa-sharp fa-delete-left"></i></button>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                        else
                                        {
                                            <tr role="row" class="odd">
                                                <td colspan="6" class="text-center">No Trainings found.</td>
                                            </tr>
                                        }

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th rowspan="1" colspan="1">#</th>
                                            <th rowspan="1" colspan="1">Training Course</th>
                                            <th rowspan="1" colspan="1">English Name</th>
                                            <th rowspan="1" colspan="1">Sinhala Date</th>
                                            <th rowspan="1" colspan="1">Tamil Date</th>
                                            <th rowspan="1" colspan="1">Sequence</th>
                                            <th rowspan="1" colspan="1">Action</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="editModuleModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditModuleModalTittle">Edit Module</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseModals('editModuleModal')">
                    <i class="bx bx-x"></i>
                </button>
            </div>
            <div class="modal-body" id="editModuleContent">
            </div>
        </div>
    </div>
</div>
<div id="detailModuleModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailModuleModalTittle">Module Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseModals('detailModuleModal')">
                    <i class="bx bx-x"></i>
                </button>
            </div>
            <div class="modal-body" id="detailModuleContent">
            </div>
        </div>
    </div>
</div>
