    <script type="text/javascript">

        $("#Error").hide();

        $(document).keypress(function(e) {
            if (e.which === 13) {
                submitLogin();
            }
        });
        function submitLogin() {
            var form = $("#loginForm");
            let isValid = true;
            const username = document.getElementById("username");
            const password = document.getElementById("password");

            const errorMessageusernameContainer = document.getElementById('error-message-username');
            const errorMessagepasswordContainer = document.getElementById('error-message-password');
            errorMessageusernameContainer.textContent = '';
            errorMessagepasswordContainer.textContent = '';
            // --- User Name Validation ---
            if (username.value.trim() === "") {
                errorMessageusernameContainer.textContent = 'Please Enter Username.';
                errorMessageusernameContainer.style.color = 'red';
                isValid = false;
            }
            if (password.value.trim() === "") {
                errorMessagepasswordContainer.textContent = 'Please Enter Password.';
                errorMessagepasswordContainer.style.color = 'red';
                isValid = false;
            }
            if (!isValid) {
                event.preventDefault();
                return false;
            }else{
                $.ajax({
                    url: form.attr("/User/Login"), // Uses the form's asp-action and asp-controller
                    type: "POST",
                    data: form.serialize(),
                    headers: { "X-Requested-With": "XMLHttpRequest" },   // Collects all form inputs
                    success: function (response) {
                    // ✅ If your controller returns JSON
                        if (response.success) {
                            Swal.fire({
                                title: 'Successfully Login!',
                                text: 'Welcome to Larning Management System.',
                                icon: 'success',
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                window.location.href = response.redirectUrl;
                            });
                        } else if(response.redirectUrl != null){
                            window.location.href = response.redirectUrl
                        } else{
                            $("#Error").text("Invalid username or password!").show();
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Something went wrong! Please try again.'
                        });
                    }
                });
            }
        }
    </script>


