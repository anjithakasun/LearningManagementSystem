<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Training Master</h1>
            </div>
            <div class="card-content">
                <div class="card-body card-dashboard">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">
                                <table class="table zero-configuration dataTable" id="Training_Table" role="grid" aria-describedby="DataTables_Table_0_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 176.781px;">#</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 266.125px;">English Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 133.844px;">Sinhala Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 47.7031px;">Tramil Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 118.547px;">Description</th>
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 358px;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.TrainingList != null && ViewBag.TrainingList.Count > 0)
                                        {
                                            int i = 1;
                                            @foreach (var item in ViewBag.TrainingList)
                                            {
                                                <tr role="row" class="odd">
                                                    <td>@i</td>
                                                    <td>@item.TrainingEname</td>
                                                    <td>@item.TrainingSname</td>
                                                    <td>@item.TrainingTname</td>
                                                    <td>@item.TrainingDescription</td>
                                                    <td>
                                                        <div class="row">
                                                            <div class="col-md-2">
                                                                <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="tooltip" data-placement="top" title="View" onclick="TDetails(@item.TrainingId)"><i class="fa-regular fa-eye"></i></button>
                                                            </div>

                                                            <div class="col-md-2" style="margin-left:30px;margin-right:20px">
                                                                <button type="button" class="btn btn-outline-warning btn-sm" data-toggle="tooltip" data-placement="top" title="Edit" onclick="TEdit(@item.TrainingId)"><i class="fa-regular fa-pen-to-square"></i></button>
                                                            </div>
                                                            <div class="col-md-2" style="margin-left:10px;margin-right:20px">
                                                                <button type="button" class="btn btn-outline-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Delete" onclick="TDelete(@item.TrainingId)"><i class="fa-sharp fa-delete-left"></i></button>
                                                            </div>
                                                        </div>

                                                    </td>

                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr role="row" class="odd">
                                                <td colspan="6" class="text-center">No Trainings found.</td>
                                            </tr>
                                        }

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th rowspan="1" colspan="1">#</th>
                                            <th rowspan="1" colspan="1">English Name</th>
                                            <th rowspan="1" colspan="1">Sinhala Name</th>
                                            <th rowspan="1" colspan="1">Tamil Name</th>
                                            <th rowspan="1" colspan="1">Description</th>
                                            <th rowspan="1" colspan="1">Action</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="editTrainingModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
