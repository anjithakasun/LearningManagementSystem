    function TDetails(Id) {
        $.ajax({
            url: '@Url.Action("TairningDetails", "Training")',
            type: "GET",
            data: { id: Id },
            dataType: 'html',
            success: function (result) {
                $("#detailTrainingModal .modal-body").html(result);
                $("#detailTrainingModal").modal('show');
            },
            error: function (xhr, status, error) {
                console.error("Failed to load modal content:", error);
                alert("Error");
                // Optionally show an error message in the modal
                $("#detailTrainingModal .modal-body").html("<p class='text-danger'>Error loading details.</p>");
                $("#detailTrainingModal").modal('show');
            }
        });
    }
    function TEdit(id) {
        $.ajax({
            url: '/Training/Edit',
            type: 'GET',
            data: { id: id },
            dataType: 'html',
            success: function (html) {
                $('#editTrainingContent').html(html);
                $('#editTrainingModal').modal('show');
                //bindEditFormSubmit(); // Bind form submit after loading content
            },
            error: function () {
                alert('Could not load complaint data.');
            }
        });
    }
    function TDelete(Id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want to delete this Training?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("Delete", "Training")',
                    type: 'POST',
                    data: { id: Id },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Deleted!',
                                text: 'Method has been deleted successfully.',
                                confirmButtonColor: '#3085d6'
                            }).then(() => {
                                location.reload(); // Refresh table after delete
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message || 'Unable to delete Method.'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred while deleting attachment.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            }
        });
    }
